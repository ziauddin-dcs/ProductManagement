@model ProductManagement.Models.Product

@{
    ViewBag.Title = "Delete Product";
}

<h2>Delete Product</h2>

<h3>Are you sure you want to delete this product?</h3>

<div>
    <h4>Product: @Model.ProductName</h4>
    <p><strong>Category:</strong> @Model.Category.CategoryName</p>
    <p><strong>Subcategory:</strong> @Model.Subcategory.SubcategoryName</p>
    <p><strong>Quantity:</strong> @Model.Qty</p>
    <p><strong>Price:</strong> @Model.Price</p>
    <p><strong>Total:</strong> @Model.Total</p>
</div>

@using (Html.BeginForm("DeleteConfirmed", "Product", new { id = Model.ProductID }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Cancel</a>
}
