<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Product Management</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        /* Custom navbar background color */
        .custom-navbar {
            background-color: #34b2e4 !important; /* Dark blue color */
            color: white; /* Text color */
        }

            .custom-navbar .navbar-nav .nav-link {
                color: white !important;
            }

                .custom-navbar .navbar-nav .nav-link:hover {
                    color: white !important; /* Yellow color on hover */
                }

            .custom-navbar .navbar-brand {
                color: white !important;
            }
    </style>
</head>
<body>
    @*<div class="navbar navbar-inverse navbar-fixed-top custom-navbar">*@
    <div class="navbar custom-navbar navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Product Management", "Index", "Product", new { area = "" }, new { @class = "navbar-brand" })
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

